# Production Environment Configuration for ArchInsight
# Copy this file to .env.production and fill in your actual values

# Application Settings
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# Security
JWT_SECRET_KEY=your_super_secret_jwt_key_here_change_this_in_production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30

# Database Configuration
POSTGRES_PASSWORD=your_secure_postgres_password_here
NEO4J_PASSWORD=your_secure_neo4j_password_here
REDIS_PASSWORD=your_secure_redis_password_here

# External API Keys
OPENAI_API_KEY=your_openai_api_key_here
GITHUB_CLIENT_ID=your_github_oauth_client_id
GITHUB_CLIENT_SECRET=your_github_oauth_client_secret

# CORS Settings
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# API Base URL
API_BASE_URL=https://api.yourdomain.com

# File Upload Settings
MAX_UPLOAD_SIZE=100MB
UPLOAD_DIR=/app/uploads
CACHE_DIR=/app/cache

# ML Model Settings
MODEL_PATH=/app/data/models

# Monitoring and Logging
SENTRY_DSN=your_sentry_dsn_here
PROMETHEUS_PORT=9090

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
GITHUB_API_RATE_LIMIT=5000

# SSL/TLS Configuration (for Nginx)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
